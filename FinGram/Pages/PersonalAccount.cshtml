@page
@model FinGram.Pages.PersonalAccountModel
@{
	ViewData["Title"] = "Личный кабинет";
}
<link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />

<div class="personal-account first">
	<!--
		<h2>Model.FirstName</h2>
		<p>Model.FinGramUser</p>
	-->
	<img src="~/images/user.svg" alt="user-img">
	<div class="user-info">
		<h2>@Model.FirstName @Model.LastName</h2>
		<p>@Model.Email</p>
	</div>
	<div class="button-row">
		<button class="btn-edit btn btn-primary">Редактировать профиль</button>
		<form method="post" asp-page-handler="Logout">
			<button type="submit" class="btn-logout btn btn-danger">Выйти</button>
		</form>
	</div>
</div>

<div class="personal-account second">
	<div class="personal-account statistic">
		<h1>Моя статистика</h1>
		<p>
			Время на платформе: <br>
			Уроков пройдено: <br>
			Средний балл: 
		</p>
	</div>

	<div class="personal-account notice">
		<h1>Подключите уведомления в Telegram</h1>
		<p>Получайте сообщения о новых уроках удобным способом.</p>
		<button class="btn-connectnotice btn btn-secondary">Подключить уведомления</button>
	</div>
</div>

<div class="container-btn-feedback">
    <button class="btn-feedback btn btn-info ">Оставить отзыв о курсе</button>
</div>

@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76R4eY2q1eXwM2pY8eX7nF1zX1zX7z2x4xX7n5e5eX7n5e5eX7n5e5eX7n5e5eX7n5e5е" crossorigin="anonymous"></script>
}

