@page
@model FinGram.Pages.LoginModel
@{
}
<div class="overlay" style="display: none"></div>
    <div class="registration-cssave" style="display: none">
      <form id="authForm">
        <div class="close-container">
          <button class="close" type="button" id="authClose">×</button>
        </div>
        <h3 class="text-center">Авторизация</h3>

        <div class="form-group">
          <input
            class="form-control item"
            type="text"
            name="username"
            maxlength="15"
            minlength="4"
            pattern="^[a-zA-Z0-0_.-]*$"
            id="username"
            placeholder="Логин"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="password"
            name="password"
            minlength="6"
            id="password"
            placeholder="Пароль"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block log-in" type="submit">
            Войти в аккаунт
          </button>
        </div>
        <p>Нет аккаунта?</p>
        <a href="#" id="registerlink">Зарегистрируйтесь здесь</a>
      </form>
    </div>

    <div
      class="registration-cssave"
      id="registrationForm"
      style="display: none"
    >
      <form id="regForm" method="post">
      <div class="close-container">
          <button class="close" type="button" id="regClose">x</button>
        </div>
        <h3 class="text-center">Регистрация</h3>

        <div class="form-group">
          <input
            class="form-control item"
            type="text"
            name="first_name"
            maxlength="30"
            placeholder="Имя"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="text"
            name="surname"
            maxlength="30"
            placeholder="Фамилия"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="date"
            name="birthday"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="text"
            name="country"
            maxlength="50"
            placeholder="Страна проживания"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="text"
            name="new_login"
            maxlength="15"
            minlength="4"
            pattern="^[a-zA-Z0-9_.-]*$"
            id="newusername"
            placeholder="Логин"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control item"
            type="password"
            name="new_password"
            minlength="6"
            id="newpassword"
            placeholder="Пароль"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block sign-up" type="submit">
            Зарегистрироваться
          </button>
        </div>
      </form>
    </div>
